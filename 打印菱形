#include<stdio.h>
int main()
{
    int n=7,i,a,b;
    for(i=1;i<=n;i++)//上半部分
    {
        for(a=n-1;a>=i;a--)
        {
            printf(" ");
        }
        for(b=1;b<=2*i-1;b++)
        {
            printf("*");
        }
        printf("\n");
    }
    for(i=n-1;i>=1;i--)//下半部分
    {
        for(a=i;a<=n-1;a++)
        {
            printf(" ");
        }
        for(b=1;b<=2*i-1;b++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
